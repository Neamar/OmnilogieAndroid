<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="fr.omnilogie.app"
    android:versionCode="3"
    android:versionName="0.4" >

    <uses-sdk android:minSdkVersion="7" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" >

        <!-- ACTIVITY : Accueil -->
        <activity
            android:name=".HomeActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!--
        ACTIVITY : Article
        Accessible par intention implicite content://fr.omnilogie.app/article/last
        Accessible par intention implicite content://fr.omnilogie.app/article/<ID-numérique>
        -->
        <activity
            android:name=".ArticleActivity"
            android:label="Affichage d&apos;un omnilogisme" >
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="fr.omnilogie.app"
                    android:pathPrefix="/article"
                    android:scheme="content" />
                <data
                    android:host="omnilogie.fr"
                    android:pathPrefix="/O/"
                    android:scheme="http" />
            </intent-filter>
        </activity>

        <!--
        ACTIVITY : Liste d'articles
        Accessible par intention implicite content://fr.omnilogie.app/liste
        Accessible par intention implicite content://fr.omnilogie.app/auteur/<ID-numérique>
        -->
        <activity
            android:name=".ListeActivity"
            android:label="Affichage d&apos;une liste d&apos;omnilogismes" >
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="fr.omnilogie.app"
                    android:pathPrefix="/auteur"
                    android:scheme="content" />
                <data
                    android:host="fr.omnilogie.app"
                    android:path="/liste"
                    android:scheme="content" />
                <data
                    android:host="fr.omnilogie.app"
                    android:path="/top"
                    android:scheme="content" />
            </intent-filter>
        </activity>

        <!-- ACTIVITY : Liste d'auteurs -->
        <activity
            android:name=".AuteursActivity"
            android:label="Affichage de la liste des omnilogistes" />

        <!-- ACTIVITY : Liste d'auteurs -->
        <activity
            android:name=".RechercheActivity"
            android:label="Recherche dans les omnilogismes" >
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>

        <receiver
            android:name=".WidgetActivity"
            android:label="@string/widget_name" >
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/widget_provider" />
        </receiver>

        <service android:name=".WidgetAlarmService" />

         <provider android:name="fr.omnilogie.app.OmnilogieProvider"
            android:authorities="fr.omnilogie.app"/>
        
        <!-- Toutes les activités se servent de RechercheActivity pour effectuer les recherches -->
        <meta-data
            android:name="android.app.default_searchable"
            android:value=".RechercheActivity" />
    </application>

</manifest>