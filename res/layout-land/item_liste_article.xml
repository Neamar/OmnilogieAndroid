        android:padding="2dp"
        android:text="Accroche"
        android:textSize="13dp" />

    <TextView
        android:id="@+id/list_item_extra"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:lines="1"
        android:padding="2dp"
