<?xml version="1.0" encoding="utf-8"?>


    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:stretchColumns="0,1"
        android:gravity="center"
        android:background="@drawable/fond_repetition"
        android:layout_height="fill_parent" >

        <TableRow>

            <!-- Article du jour -->

            <RelativeLayout
                android:id="@+id/home_article"
                android:layout_width="100dp"
                android:layout_height="100dp" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/bulle" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/bulle_article" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="Article du jour"
                    android:textColor="#000" />
            </RelativeLayout>

            <!-- Liste des articles -->

            <RelativeLayout
                android:id="@+id/home_liste"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_toRightOf="@id/home_article" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/bulle" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/bulle_liste" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="Liste des articles"
                    android:textColor="#000" />
            </RelativeLayout>
        </TableRow>

        <TableRow>

            <!-- Liste des auteurs -->

            <RelativeLayout
                android:id="@+id/home_auteurs"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_below="@id/home_liste" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/bulle" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/bulle_auteurs" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="Auteurs"
                    android:textColor="#000" />
            </RelativeLayout>

            <!-- Un article au hasard -->

            <RelativeLayout
                android:id="@+id/home_aleatoire"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_below="@id/home_liste"
                android:layout_toRightOf="@id/home_auteurs" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/bulle" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/bulle_aleatoire" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="Au hasard"
                    android:textColor="#000" />
            </RelativeLayout>
        </TableRow>
    </TableLayout>